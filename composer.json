{
    "name": "spiral/twig-bridge",
    "type": "library",
    "description": "Spiral Framework: Twig Adapter",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Titov / Wolfy-J",
            "email": "wolfy.jd@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "twig/twig": "^3.3.3",
        "spiral/core": "^3.0",
        "spiral/views": "^3.0",
        "spiral/framework": "^3.0"
    },
    "require-dev": {
        "vimeo/psalm": "^4.23",
        "spiral/testing": "^2.0",
        "phpunit/phpunit": "^9.5.20"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Twig\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Twig\\Tests\\": "tests/src",
            "Spiral\\Twig\\Tests\\App\\": "tests/app"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
